{
  "manifest_version": 2,
  "name": "CleanCookie",
  "version": "1.0",
  "description": "Blocks tracking cookies, keeps session ones.",
  "permissions": ["webNavigation", "webRequest", "webRequestBlocking", "cookies", "storage", "<all_urls>"],
  "background": {
    "scripts": ["whitelist.js", "background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
