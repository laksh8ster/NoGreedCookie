{
  "manifest_version": 2,
  "name": "CleanCookie",
  "version": "1.0",
  "description": "Blocks tracking cookies, keeps session ones.",
  "permissions": ["webNavigation", "webRequest", "webRequestBlocking", "cookies", "storage", "tabs", "<all_urls>"],
  "background": {
    "scripts": ["whitelist.js", "background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
  "gecko": {
    "id": "cleancookie@yourname",
    "update_url": "https://raw.githubusercontent.com/yourusername/CleanCookie/main/updates.json"
  }
 }
}
